{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Ralph Loop Security Settings - Controls what the agent can do",

  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(wsl *)",
      "Bash(git status*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(cd *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(python *)",
      "Bash(uvicorn *)",
      "Bash(pytest *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo *)",
      "Read(.env)",
      "Write(.env)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)"
    ]
  },

  "limits": {
    "max_file_size_kb": 1000,
    "max_files_per_write": 10,
    "max_bash_timeout_seconds": 120
  }
}
