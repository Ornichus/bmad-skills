{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -Command \"Write-Output '{\\\"continue\\\": true, \\\"systemMessage\\\": \\\"RAPPEL: Pensez a /update si des changements significatifs ont ete faits.\\\"}'\"'",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File %USERPROFILE%\\.claude\\hooks\\precompact-handler.ps1",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File %USERPROFILE%\\.claude\\hooks\\session-start-handler.ps1",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
